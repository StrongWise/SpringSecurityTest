<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springsecuritytest.mapper.UserMapper">

    <select id="selectUserByName" resultType="com.example.springsecuritytest.model.Role">
        SELECT id
             , email
             , password
             , username
          FROM users
         WHERE username = #{username}
    </select>

    <select id="isExistUser" resultType="boolean">
        SELECT EXISTS
                   (SELECT 1 FROM users WHERE username = #{username})
    </select>

    <select id="isExistEmail" resultType="boolean">
        SELECT EXISTS
                   (SELECT 1 FROM users WHERE email = #{email})
    </select>

</mapper>